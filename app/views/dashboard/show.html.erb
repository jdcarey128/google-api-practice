<div>
<h1>Hello, <%= @user.first_name %>!</h1>
</div>

<div>
<%= link_to('Log out', '/logout') %>
</div>

<div>
  <%= form_with url: google_sheets_data_path, local: true, method: :get do |form| %>
    <%= form.label :record_count, 'How many records per school would you like to display?' %>
    <%= form.number_field :record_count, in: 1.0..50.0, step: 1.0 %>
    <%= form.submit 'Fetch Google Sheet Data' %>
  <% end %>
</div>
